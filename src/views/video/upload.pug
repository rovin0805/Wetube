extends ../base

block content 
    div.upload__container
        div.upload__video
            video#preview
            button#actionBtn.social__btn Start Recording
        if error
            span=error
        form(method="POST", enctype="multipart/form-data")
            label(for="video") Video File 
            input(id="video", type="file", accept="video/*", name="video", required)
            label(for="thumbnail") Thumbnail File
            input(type="file", accept="image/*", required, id="thumbnail", name="thumbnail")
            input(placeholder="Title", name="title", type="text", required, maxLength=50)
            input(placeholder="Description", name="description", type="text", required, maxLength=200)
            input(placeholder="Hashtags (separated by comma)", name="hashtags", type="text", required)
            input(type="submit", value="Upload Video")

block scripts 
  script(src="/static/js/recorder.js") 